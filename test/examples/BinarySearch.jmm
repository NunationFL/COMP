import io.io;

class BinarySearch {

    public static void main(String[] args)
    {
        BinarySearch searcher;
        int[] array;
        int size;
        int target;
        int result;

        size = 6;
        array = new int[size];
        array[0] = 3;
        array[1] = 7;
        array[2] = 9;
        array[3] = 28;
        array[4] = 45;
        array[5] = 85;

        searcher = new BinarySearch();

        target = 45;
        result = searcher.binarySearch(array, 0, size - 1, target);

        io.printsearch(result);
    }

    public int binarySearch(int[] array, int left, int right, int target)
    {
        int mid;
        int out;

        if (this.menorigual(left,right)) {
            mid = left + (right - left) / 2;

            if (this.equals(array[mid],target)){
                out = mid;
            }
            else{
                if (target < array[mid]){
                    out = this.binarySearch(array, left, mid - 1, target);
                }
                else {
                    out = this.binarySearch(array, mid + 1, right, target);
                }
            }
        }
        else{
            out =  -1;
        }

        return out;
    }

    public boolean equals(int num1, int num2){
        boolean out;

        if(num1<num2){
            out = false;
        }
        else{
            if(num2<num1){
                out = false;
            }
            else{
                out = true;
            }
        }

        return out;
    }

    public boolean menorigual(int num1, int num2){
        boolean out;

        if(num1<num2){
            out = true;
        }
        else{
            if(num2<num1){
                out = false;
            }
            else{
                out = true;
            }
        }

        return out;
    }
}
